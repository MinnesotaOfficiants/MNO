<!-- wedding index -->
<p id="notice"><%= notice %></p>
<%=ENV['C9_USER']%>
<h1>Listing Weddings</h1> <%= link_to 'New Wedding', new_wedding_path %>
 <div class = "container" id = "windex">
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
 
    <tr align = "left" text-color = "red">
    
        <th width = 100px>
          Date 
        </th>
        <th width = 90px>
          Time 
        </th>

        <th width = 150px >
          Bride 
        </th>
        <th width = 150px >
          Groom 
        </th>
        <th width = 125px>
          Phone 
        </th>
      
        
        <th>
          Location 
        </th>
      </tr>
      <% @weddings.each do |wedding| %>
      
      <tr>
          <td>
            <%=  link_to  wedding.wedding_date, edit_wedding_path(wedding) %>
          </td>
           <td >
            <% if wedding.wedding_time == nil  %>
              <%= "[TBD]" %>
            <% else %>
              <%= wedding.wedding_time.strftime("%I:%M %p")    %>
            <% end %>
          </td>
          <td>
            <%= wedding.bride_first_name.strip + ' ' + wedding.bride_last_name.strip  %>
          </td>
         
          <td>
            <%= wedding.groom_first_name.strip + ' ' + wedding.groom_last_name  %>
          </td>
          <td>
            <%= wedding.bride_phone %>
          </td>
          
           <td>
            <%= wedding.location %>
          </td>

      </tr>
        <!-- <tr>
          <td><%= link_to 'Show', wedding %></td>
          <td><%= link_to 'Edit', edit_wedding_path(wedding) %></td>
          <td><%= link_to 'Destroy', wedding, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        </tr> -->
      <% end %>
    </tbody>
  </table>
</div> <!-- container -->
<br>


