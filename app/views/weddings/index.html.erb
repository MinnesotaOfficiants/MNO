<h1>Listing Weddings</h1> 
<% if @user.admin? %>
  <!-- make a simple search form for all booked wedding date -->
  <%= form_tag weddings_path, method: :get do %>
    <%= date_field_tag :search , params[:search] ,"data-provide" => 'datepicker', "data-date-format" => 'yyyy-mm-dd' %>
    <%= submit_tag "Search for date" %>
  <% end %> 
  

 <%= link_to get_new_web_requests_wedding_path(@weddings) ,  method: :get  do  %>
    <span class ="btn btn-default btn-info"> Refresh </span>
  <% end %>

  
<% end %>

<%= link_to 'New Wedding', new_wedding_path %>
 <div class = "container" id = "windex">
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
 
    <tr align = "left" text-color = "red">
        
        <th width = 100px>
          <% if @user.admin? %>
            <%= 'Go to' %>
          <% else %>
            <%= "Date" %>
          <% end %> 
        </th>
        <th width = 90px>
          <% if @user.admin? %>
            <%= 'Date' %>
          <% else %>
            <%= "Time" %>
          <% end %> 
        </th>

        <th width = 150px >
          Bride 
        </th>
        <th width = 150px >
          Groom 
        </th>
        <th width = 200px>
          <% if @user.admin? %>
            <%= ' Location' %>
          <% else %>
            <%= "Phone" %>
          <% end %> 
        </th>
      
        
        <th>
          <% if @user.admin? %>
            <%= ' Officiant choice' %>
          <% else %>
            <%= "Location" %>
          <% end %>  
        </th>
      </tr>
      <% @weddings.each do |wedding| %>
      
      <tr>

          <td>
            <% if @user.admin? %>
              <%= link_to  "Edit", edit_wedding_path(wedding)%>
              <%=  link_to  "Assign", new_wedding_inquiry_path(wedding) %>
             

            <% else %>
              <%=  link_to  wedding.wedding_date, edit_wedding_path(wedding) %>
            <% end %>
          </td>
           <td >
            <% if @user.admin? %>
                <%= wedding.wedding_date.to_s %>
            
            <% else %>
              <% if wedding.wedding_time == nil  %>
                <%= "[TBD]" %>
              <% else %>
                <%= wedding.wedding_time.strftime("%I:%M %p")    %>
              <% end %>
            <% end %>
          </td>
          <td>
            <%= wedding.bride_first_name.strip + ' ' + wedding.bride_last_name.strip  %>
          </td>
         
          <td>
            <%= wedding.groom_first_name.strip + ' ' + wedding.groom_last_name  %>
          </td>
          <td>
            <% if @user.admin? %>
             <%= wedding.location %>
            <% else %>
              <%= wedding.bride_phone %>
            <% end %> 
              
          </td>
          
           <td>
            <% if @user.admin?  %>
              
              <% if wedding.status == "booked" %>
                <%= User.find(wedding.user_id).first_name + ' - ' + User.find(wedding.user_id).last_name %>                
                <% else %> 

                <%= wedding.first_choice + ' - ' + wedding.second_choice %>
                <% end %>
            <% else %>
             <%= wedding.location %>
            <% end %> 

          </td>

      </tr>

        <!-- <tr>
          <td><%= link_to 'Show', wedding %></td>
          <td><%= link_to 'Edit', edit_wedding_path(wedding) %></td>
          <td><%= link_to 'Destroy', wedding, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        </tr> -->
      <% end %>

    </tbody>
  </table>
</div> <!-- container -->
