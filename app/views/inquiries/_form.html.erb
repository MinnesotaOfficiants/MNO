        <%= f.date_field :phone_call_date,"data-provide" => 'datepicker', "data-date-format" => 'yyyy-mm-dd'  %>
        <!--<%= f.date_select :phone_call_date , include_blank: true,use_month_numbers:  true, order: [ :month, :day,:year] %>-->
      </div>
    </div>
   
    </div>
    <div class = "row last-item" >
      <div class = "col col-sm-6">
        <div class="field">
          <%= f.label :intro_meeting %>
          <%= f.check_box :intro_meeting %>
        </div>
      
        <div class="field " >
          <%= f.label :meeting_date %>
          <%= f.date_field :meeting_date,  "data-provide" => 'datepicker', "data-date-format" => 'yyyy-mm-dd'  %>
